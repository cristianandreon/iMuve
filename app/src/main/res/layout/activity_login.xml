<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo3"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.imuve.cristian.imuve.LoginActivity">

    <!-- Login progress -->

    <GridLayout
        android:layout_width="840dp"
        android:layout_height="320dp"
        android:layout_weight="0.10"
        android:background="@drawable/shape"
        android:elevation="5dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:text="Autenticazione iMuve"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_row="1"
            android:gravity="right"
            android:text="Utente"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff170100" />

        <Button
            android:id="@+id/btSettings"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/xml"
            android:layout_column="2"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_row="3"
            android:text="IMPOSTAZIONI" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:layout_column="0"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_row="4"
            android:gravity="right"
            android:text="Versione Android"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff170100"
            android:textIsSelectable="false"
            android:textSize="14dp" />

        <ListView
            android:id="@+id/lvUser"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_rowSpan="2"
            android:clickable="true" />

        <TextView
            android:id="@+id/tvSN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="right"
            android:layout_row="1"
            android:gravity="right"
            android:text="S/N: abc000"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ff80807e" />

        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="right"
            android:layout_row="2"
            android:gravity="right"
            android:text="Ver x.y.z.t"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ff80807e" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:layout_column="0"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_row="3"
            android:gravity="right"
            android:text="Dispositivo"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff170100" />

        <TextView
            android:id="@+id/device_name"
            android:layout_width="400dp"
            android:layout_height="46dp"
            android:layout_column="1"
            android:layout_row="3"
            android:hint="Desvice ID"
            android:text="(Device ID)"
            android:textColor="#ff070748" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:paddingTop="10dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/tvAndroidVersion"
            android:layout_width="400dp"
            android:layout_height="46dp"
            android:layout_column="1"
            android:layout_row="4"
            android:hint="Desvice ID"
            android:text="(Android Ver)"
            android:textColor="#ff070748"
            android:textSize="14dp" />

        <Button
            android:id="@+id/btLogin"
            style="?android:textAppearanceSmall"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_marginTop="16dp"
            android:layout_row="5"
            android:text="ENTRA"
            android:textStyle="bold" />
    </GridLayout>

</LinearLayout>




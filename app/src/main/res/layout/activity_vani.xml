<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:windowSoftInputMode="stateAlwaysHidden"
    android:focusableInTouchMode="false"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo3">


    <TableLayout
        android:layout_width="1100dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:layout_width="165dp"
                android:layout_height="42dp"
                android:text="Complesso"
                android:id="@+id/textView3"
                android:layout_column="0"
                android:textSize="17dp"
                android:singleLine="true"
                android:layout_margin="0dp"
                android:gravity="right"
                android:layout_gravity="right" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="COMPLESSO"
                android:id="@+id/Complesso"
                android:layout_column="1"
                android:shadowColor="#ffc02000"
                android:singleLine="true"
                android:textSize="20dp"
                android:textColor="#ff000000"
                android:textStyle="bold"
                
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="195dp"
                android:layout_height="42dp"
                android:text="Edificio"
                android:id="@+id/textView12"
                android:layout_column="2"
                android:textSize="17dp"
                android:singleLine="true"
                android:layout_margin="0dp"
                android:gravity="right" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="EDIFICIO"
                android:id="@+id/Edificio"
                android:layout_column="3"
                android:singleLine="true"
                android:textSize="20dp"
                android:textColor="#ff32000e"
                android:textStyle="bold"
                
                android:layout_marginLeft="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo"
                android:layout_column="5" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:layout_width="165dp"
                android:layout_height="42dp"
                android:text="Piano"
                android:id="@+id/textView14"
                android:layout_column="0"
                android:textSize="17dp"
                android:singleLine="true"
                android:layout_margin="0dp"
                android:gravity="right"
                android:layout_gravity="right" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="PIANO"
                android:id="@+id/Piano"
                android:layout_column="1"
                android:singleLine="true"
                android:textSize="20dp"
                android:textColor="#ff460300"
                android:textStyle="bold"
                
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="195dp"
                android:layout_height="42dp"
                android:text="Vavo"
                android:id="@+id/textView16"
                android:layout_column="2"
                android:textSize="17dp"
                android:singleLine="true"
                android:layout_margin="0dp"
                android:gravity="right" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="VANO"
                android:id="@+id/Vano"
                android:layout_column="3"
                android:singleLine="true"
                android:textSize="20dp"
                android:textColor="#ff5f0400"
                android:textStyle="bold"
                
                android:layout_marginLeft="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:id="@+id/textView39"
                android:layout_row="6"
                android:layout_column="0"
                android:background="#ff710003"
                android:layout_span="6" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView38"
                android:layout_column="0"
                android:textSize="17dp"
                android:layout_margin="1dp"
                android:text="Oggetti nel vano"
                android:layout_gravity="center_vertical|right" />

            <TextView
                android:layout_width="195dp"
                android:layout_height="10dp"
                android:id="@+id/textView23"
                android:layout_column="1"
                android:textSize="17dp"
                android:layout_margin="1dp"
                android:gravity="right" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >


            <ListView
                android:layout_width="fill_parent"
                android:layout_height="450dp"
                android:id="@+id/lvVani"
                android:layout_column="0"
                android:layout_marginLeft="5dp"
                android:layout_span="6"
                android:numColumns="2"
                android:background="@drawable/shape" />


        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal">

            <Space
                android:layout_width="20px"
                android:layout_height="10dp"
                android:layout_column="0" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:id="@+id/textView37"
                android:layout_row="6"
                android:layout_column="0"
                android:background="#ff710003"
                android:layout_span="6" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="OK"
                android:id="@+id/ok"
                android:layout_gravity="center_horizontal"
                android:layout_column="2" />
        </TableRow>

    </TableLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusableInTouchMode="false"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:windowSoftInputMode="stateAlwaysHidden"
    android:background="@drawable/logo3">



    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_column="0" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:layout_width="165dp"
                android:layout_height="42dp"
                android:text="Oggetto"
                android:id="@+id/labelOggetto"
                android:layout_column="0"
                android:textSize="17sp"
                android:singleLine="true"
                android:layout_margin="0dp"
                android:gravity="right"
                android:layout_gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OGGETTO"
                android:id="@+id/tvOggetto"
                android:layout_column="1"
                android:shadowColor="#ffc02000"
                android:singleLine="true"
                android:textSize="20dp"
                android:textColor="#ff000000"
                android:textStyle="bold"

                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="195dp"
                android:layout_height="42dp"
                android:text="Descrizione"
                android:id="@+id/labalDesc"
                android:layout_column="2"
                android:textSize="17dp"
                android:singleLine="true"
                android:layout_margin="0dp"
                android:gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESCRIZIONE"
                android:id="@+id/tvDesc"
                android:layout_column="3"
                android:singleLine="true"
                android:textSize="20dp"
                android:textColor="#ff32000e"
                android:textStyle="bold"

                android:layout_marginLeft="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo"
                android:layout_column="5" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:id="@+id/textView39"
                android:layout_row="6"
                android:layout_column="0"
                android:background="#ff710003"
                android:layout_span="6" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/textView38"
                android:layout_column="0"
                android:textSize="20dp"
                android:text="Risolvi ambiguitÃ  : seleziona l&apos;oggetto sul quale inserire/modificare gli interventi"
                android:layout_gravity="center"
                android:layout_span="6"
                android:theme="@android:style/TextAppearance.DeviceDefault.Large"
                android:gravity="center_vertical" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >


            <ListView
                android:layout_width="fill_parent"
                android:layout_height="450dp"
                android:id="@+id/lvOggettiSelection"
                android:layout_column="0"
                android:layout_marginLeft="5dp"
                android:layout_span="6"
                android:numColumns="2"
                android:choiceMode="singleChoice"
                android:background="@drawable/shape" />


        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal">

            <Space
                android:layout_width="20px"
                android:layout_height="10dp"
                android:layout_column="0" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:id="@+id/textView37"
                android:layout_row="6"
                android:layout_column="0"
                android:background="#ff710003"
                android:layout_span="6" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="CANCELLA"
                android:id="@+id/btCancel"
                android:layout_gravity="center_horizontal"
                android:layout_column="1" />

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="OK"
                android:id="@+id/btOk"
                android:layout_gravity="center_horizontal"
                android:layout_column="3" />
        </TableRow>

    </TableLayout>

</LinearLayout>
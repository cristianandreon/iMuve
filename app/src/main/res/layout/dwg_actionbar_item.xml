<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="left"
    android:orientation="horizontal"
    android:weightSum="5" >

    <Spinner
        android:id="@+id/spinPiani"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:spinnerMode="dropdown"
        android:layout_gravity="center_vertical"
        android:gravity="left" />

    <Spinner
        android:id="@+id/spinVani"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:spinnerMode="dropdown"
        android:layout_gravity="center_vertical"
        android:gravity="right" />


    <Spinner
        android:id="@+id/spinOggetti"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:spinnerMode="dropdown"
        android:layout_gravity="center_vertical"
        android:gravity="right"
        android:textAlignment="textEnd"
        android:paddingRight="15dp" />

    <CheckBox
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="@string/showIfIntervento"
        android:id="@+id/ckShowIfIntervento"
        android:layout_gravity="center_vertical|right"
        android:layout_weight="0.58"
        android:checked="false"
        android:paddingLeft="10dp"
        android:textSize="12dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lampadine"
        android:id="@+id/ckLampadine"
        android:layout_gravity="center_vertical"
        android:checked="false"
        android:paddingLeft="10dp"
        android:layout_weight="0.10"
        android:textSize="12dp" />

    <CheckBox
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Emergenze"
        android:id="@+id/ckEmergenze"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.55"
        android:checked="false"
        android:paddingLeft="10dp"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:inputType="text"
        android:layout_gravity="center_vertical"
        android:textIsSelectable="false"
        android:selectAllOnFocus="true" />

</LinearLayout>
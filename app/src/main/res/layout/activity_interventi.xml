<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:windowSoftInputMode="stateAlwaysHidden"
    android:layout_height="fill_parent"
    android:background="@drawable/logo3">


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:layout_width="165dp"
                android:layout_height="42dp"
                android:text="Complesso"
                android:id="@+id/textView3"
                android:layout_column="0"
                android:textSize="17dp"
                android:singleLine="true"
                android:layout_margin="0dp"
                android:gravity="right"
                android:layout_gravity="right" />

            <TextView
                android:layout_width="350dp"
                android:layout_height="42dp"
                android:text="COMPLESSO"
                android:id="@+id/Complesso"
                android:layout_column="1"
                android:shadowColor="#ffc02000"
                android:singleLine="true"
                android:textSize="20dp"
                android:textColor="#ff000000"
                android:textStyle="bold"
                
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="50dp"
                android:text="Edificio"
                android:id="@+id/textView12"
                android:layout_column="2"
                android:textSize="17dp"
                android:singleLine="true"
                android:layout_margin="0dp"
                android:gravity="right" />

            <TextView
                android:layout_width="250dp"
                android:text="EDIFICIO"
                android:id="@+id/Edificio"
                android:layout_column="3"
                android:singleLine="true"
                android:textSize="20dp"
                android:textColor="#ff32000e"
                android:textStyle="bold"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo"
                android:layout_column="5"
                android:layout_gravity="right"
                android:layout_span="2" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:layout_width="165dp"
                android:layout_height="42dp"
                android:text="Piano"
                android:id="@+id/textView14"
                android:layout_column="0"
                android:textSize="17dp"
                android:singleLine="true"
                android:layout_margin="0dp"
                android:gravity="right"
                android:layout_gravity="right" />

            <TextView
                android:layout_width="350dp"
                android:layout_height="fill_parent"
                android:text="PIANO"
                android:id="@+id/Piano"
                android:layout_column="1"
                android:singleLine="true"
                android:textSize="20dp"
                android:textColor="#ff460300"
                android:textStyle="bold"
                
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="42dp"
                android:text="Vano"
                android:id="@+id/textView16"
                android:layout_column="2"
                android:textSize="17dp"
                android:singleLine="true"
                android:layout_margin="0dp"
                android:gravity="right" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="fill_parent"
                android:text="VANO"
                android:id="@+id/Vano"
                android:layout_column="3"
                android:singleLine="true"
                android:textSize="20dp"
                android:textColor="#ff5f0400"
                android:textStyle="bold"
                
                android:layout_marginLeft="5dp"
                android:layout_span="2" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:layout_width="165dp"
                android:layout_height="42dp"
                android:text="Oggetto manutentivo  "
                android:id="@+id/textView18"
                android:layout_column="0"
                android:textSize="17dp"
                android:singleLine="true"
                android:layout_margin="0dp"
                android:gravity="right"
                android:layout_gravity="right" />

            <TextView
                android:layout_width="350dp"
                android:layout_height="fill_parent"
                android:text="ID"
                android:id="@+id/Obj"
                android:layout_column="1"
                android:singleLine="false"
                android:textSize="20dp"
                android:textColor="#ff870300"
                android:textStyle="bold"

                android:layout_marginLeft="5dp" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="165dp"
                android:layout_height="42dp"
                android:text="Codice  Intervento"
                android:id="@+id/textView2"
                android:layout_column="0"
                android:textSize="17dp"
                android:layout_margin="0dp"
                android:gravity="right"
                android:layout_gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCodiceIntervento"
                android:layout_column="1"
                android:singleLine="true"
                android:background="#64fcf8ea"
                android:layout_marginLeft="5dp"
                android:autoText="false"
                android:contentDescription="Descrizione dell&apos;intervento sull&apos;oggetto manutentivo"
                android:textSize="20dp"
                android:layout_span="2" />

            <TextView
                android:layout_width="165dp"
                android:layout_height="42dp"
                android:text="Stato"
                android:id="@+id/tvStato"
                android:layout_column="3"
                android:textSize="17dp"
                android:layout_margin="0dp"
                android:gravity="right"
                android:layout_gravity="right" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/etStato"
                android:layout_column="5"
                android:singleLine="true"
                android:background="#64fcf8ea"
                android:layout_marginLeft="5dp"
                android:autoText="false"
                android:contentDescription="Descrizione dell&apos;intervento sull&apos;oggetto manutentivo"
                android:textSize="20dp"
                android:inputType="none" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:layout_width="165dp"
                android:layout_height="42dp"
                android:text="Descrizione Intervento"
                android:id="@+id/textView20"
                android:layout_column="0"
                android:textSize="17dp"
                android:layout_margin="0dp"
                android:gravity="right"
                android:layout_gravity="right" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/etDescIntervento"
                android:layout_column="1"
                android:singleLine="true"
                android:background="#64f4fcec"
                android:layout_marginLeft="5dp"
                android:autoText="false"
                android:contentDescription="Descrizione dell&apos;intervento sull&apos;oggetto manutentivo"
                android:textSize="20dp"
                android:layout_span="5" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:layout_width="165dp"
                android:layout_height="42dp"
                android:text="Descrizione estesa"
                android:id="@+id/textView21"
                android:layout_column="0"
                android:textSize="17dp"
                android:layout_margin="0dp"
                android:gravity="right"
                android:layout_gravity="center_vertical|right" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:id="@+id/etExtDescIntervento"
                android:layout_column="1"
                android:singleLine="false"
                android:background="#64fcfcf8"
                android:layout_marginLeft="5dp"
                android:autoText="false"
                android:contentDescription="Descrizione dell&apos;intervento sull&apos;oggetto manutentivo"
                android:textSize="20dp"
                android:layout_span="5" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:layout_width="190dp"
                android:layout_height="46dp"
                android:text="Data\napertura-scadenza-chiusura"
                android:id="@+id/textView22"
                android:layout_column="0"
                android:textSize="14dp"
                android:layout_margin="0dp"
                android:gravity="center_vertical|right"
                android:layout_gravity="center_vertical|right" />

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="1"
                android:layout_span="4">


                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:ems="10"
                        android:id="@+id/tvDataApertura"
                        android:layout_column="0"
                        android:textSize="17dp"
                        android:text="00/00/0000"
                        android:layout_marginLeft="5dp" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:id="@+id/textView4"
                        android:layout_column="2"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:ems="10"
                        android:id="@+id/tvDataScadenza"
                        android:layout_column="3"
                        android:textSize="17dp"
                        android:text="00/00/0000"
                        android:layout_marginLeft="5dp" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:id="@+id/textView"
                        android:layout_column="2"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:ems="10"
                        android:id="@+id/tvDataChiusura"
                        android:layout_column="5"
                        android:textSize="17dp"
                        android:text="00/00/0000"
                        android:layout_marginLeft="5dp" />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                </TableRow>

            </TableLayout>


        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:id="@+id/textView39"
                android:layout_row="6"
                android:layout_column="0"
                android:background="#ff710003"
                android:layout_columnSpan="4"
                android:layout_span="6" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView38"
                android:layout_column="0"
                android:textSize="17dp"
                android:layout_margin="1dp"
                android:text="Informazioni oggetto"
                android:layout_gravity="center_vertical|right" />

            <TextView
                android:layout_width="195dp"
                android:layout_height="10dp"
                android:id="@+id/textView23"
                android:layout_column="1"
                android:textSize="17dp"
                android:layout_margin="1dp"
                android:gravity="right" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >


            <GridView
                android:layout_width="fill_parent"
                android:layout_height="225dp"
                android:id="@+id/gridView"
                android:layout_column="0"
                android:layout_marginLeft="5dp"
                android:layout_span="6"
                android:background="@drawable/shape"
                android:choiceMode="singleChoice"
                android:numColumns="3" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal">

            <Space
                android:layout_width="20px"
                android:layout_height="10dp"
                android:layout_column="0" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:id="@+id/textView37"
                android:layout_row="6"
                android:layout_column="0"
                android:background="#ff710003"
                android:layout_columnSpan="4"
                android:layout_span="6" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom">

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Annulla"
                android:id="@+id/cancel"
                android:layout_gravity="center_horizontal"
                android:layout_column="0"
                android:width="200dp" />

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="sincronizza"
                android:id="@+id/btSync"
                android:layout_gravity="center_horizontal"
                android:layout_column="2"
                android:width="200dp" />

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="OK"
                android:id="@+id/ok"
                android:layout_gravity="center_horizontal"
                android:layout_column="5"
                android:width="200dp" />
        </TableRow>

    </TableLayout>

</LinearLayout>